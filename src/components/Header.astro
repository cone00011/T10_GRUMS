<section>
  <div class="logo">
    <a href="/">
      <img src="/GRUMS/logo/logo.png" alt="logo">
    </a>
  </div>
    <nav>
        <ul class="menu">
            <li class="left"><a href="/menu">menu</a></li>
            <li class="right"><a href="/events">events</a></li>
        </ul>
        <div class="burger">
            <div class="line"></div>
            <div class="line"></div>
            <div class="line"></div>
        </div>
    </nav>
    <div class="mobile-menu">
        <div class="close">&times;</div>
        <a href="/menu">menu</a>
        <a href="/events">events</a>
    </div>
</section>

<script>
    // Vælg elementer
    const burger = document.querySelector('.burger'); // Burger-menuen
    const mobileMenu = document.querySelector('.mobile-menu'); // Mobilmenuen
    const closeMenu = document.querySelector('.mobile-menu .close'); // Luk-knappen (krydset)

    // Åbn mobilmenu, når burger-menuen klikkes
    burger.addEventListener('click', () => {
        mobileMenu.classList.add('open'); // Tilføj "open"-klassen til mobilmenuen
        burger.classList.add('active'); // Tilføj "active"-klassen til burger-menuen
    });

    // Luk mobilmenu, når krydset klikkes
    closeMenu.addEventListener('click', () => {
        mobileMenu.classList.remove('open'); // Fjern "open"-klassen fra mobilmenuen
        burger.classList.remove('active'); // Fjern "active"-klassen fra burger-menuen
    });
</script>



